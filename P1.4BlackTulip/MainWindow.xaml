<Window x:Class="P1._4BlackTulip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P1._4BlackTulip"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Menu x:Name="Menu" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="774">
        <MenuItem x:Name="btnKlanten" Header="Klanten" Height="24" Width="100" Click="BtnKlanten_Click" Background="#FFDCD3D3"/>
        <MenuItem x:Name="btnProducten" Header="Producten" Height="24" Width="100" Click="BtnProducten_Click" Background="#FFDCD3D3"/>
        <MenuItem x:Name="btnBesteling" Header="Besteling" Height="24" Width="100" Click="BtnBesteling_Click" Background="#FFDCD3D3"/>
        <MenuItem x:Name="btnAfrekenen" Header="Afrekenen" Height="24" Width="100" Click="BtnAfrekenen_Click" Background="#FFDCD3D3"/>
        <Grid x:Name="MainGrid" Width="758" Height="369"  VerticalAlignment="Bottom" HorizontalAlignment="Left" >
            <Grid.Background>
                <ImageBrush ImageSource="BlackTulip.jpg"/>
            </Grid.Background>
        </Grid>
    </Menu>

</Window>
